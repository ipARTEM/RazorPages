@page
@model RazorPages002.Pages.Employees.EmployeesModel
@{
    ViewData["Title"] = "Employees";
    ViewData["ShowButtons"] = true;
}

@if (TempData["SeccessMessage"] !=null)
{
    <div class="alert alert-success text-center">
        @TempData["SeccessMessage"]

    </div> 

}

<h1>Employees</h1>

<h3>Employees count: @Model.Employees.Count()</h3>

<div class="row">
    @foreach (var item in Model.Employees)
    {
        <div class="col-12 col-sm-6 col-sm-6 col-lg-4">
            <partial name="_DisplayEmployeePartial" model="item" view-data="ViewData"/>
        </div>

    }

</div>


